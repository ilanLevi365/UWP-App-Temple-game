<Page
    x:Class="New_Game1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:New_Game1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:ConnectionId='2' x:Name="CanvasOpeningScreen" Margin="0,0,6,0" FocusVisualPrimaryBrush="#FFE4E020">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFCCB819" Offset="0.473"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Image Source="/Assets/תמונת שער.jpg" Width="1272" Height="720" FocusVisualPrimaryBrush="#FFD43F3F" Canvas.Left="6" />

        <Button x:ConnectionId='3' x:Name="btnStart" Content="התחל" Canvas.Left="416" Canvas.Top="166" Height="80" Width="120" FontWeight="Bold" FontSize="36" RenderTransformOrigin="2.056,0.55"                        Foreground="#FF7E8525">
            <Button.Background>
                <SolidColorBrush Color="#4CD1DCDC"/>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF12368B"/>
            </Button.BorderBrush>
        </Button>
        <Button x:ConnectionId='4' x:Name="btnEnd" Content="סיום" Canvas.Left="210" Canvas.Top="166" Height="80" Width="120" RenderTransformOrigin="0.404,2.456" FontWeight="Bold" FontSize="36" Foreground="#FF7E8525"                     >
            <Button.Background>
                <SolidColorBrush Color="#4CFFFFFF"/>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF122E8B"/>
            </Button.BorderBrush>
        </Button>
        <MediaElement x:ConnectionId='5' x:Name="BackgroundMusic" Source="/Assets/BackgroundMusic.m4a"/>
        <TextBlock Canvas.Left="1082" Canvas.Top="644" Text="היוצר: אילן לוי" TextWrapping="Wrap" Height="37" Width="157" FontWeight="Bold" TextAlignment="Center" FontSize="20" TextDecorations="Underline" FontStyle="Italic">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{ThemeResource SystemAltHighColor}"/>
            </TextBlock.Foreground>
        </TextBlock>
    </Canvas>

</Page>

